<%- contentFor('body') %>
<div class="max-w-2xl mx-auto">
    <h1 class="text-2xl font-bold mb-6">
        <%= book ? 'Edit Book' : 'Add New Book' %>
    </h1>
    
    <form action="<%= book ? `/admin/books/${book._id}?_method=PUT` : '/admin/books' %>" 
          method="POST" 
          class="bg-white p-6 rounded-lg shadow">
        <div class="mb-4">
            <label class="block text-gray-700 mb-2" for="title">Title</label>
            <input type="text" 
                   id="title" 
                   name="title" 
                   value="<%= book ? book.title : '' %>"
                   class="w-full p-2 border rounded"
                   required>
        </div>
        
        <div class="mb-4">
            <label class="block text-gray-700 mb-2" for="author">Author</label>
            <input type="text" 
                   id="author" 
                   name="author" 
                   value="<%= book ? book.author : '' %>"
                   class="w-full p-2 border rounded"
                   required>
        </div>
        
        <div class="mb-4">
            <label class="block text-gray-700 mb-2" for="price">Price</label>
            <input type="number" 
                   id="price" 
                   name="price" 
                   value="<%= book ? book.price : '' %>"
                   step="0.01"
                   class="w-full p-2 border rounded"
                   required>
        </div>
        
        <div class="mb-4">
            <label class="block text-gray-700 mb-2" for="stock">Stock</label>
            <input type="number" 
                   id="stock" 
                   name="stock" 
                   value="<%= book ? book.stock : '' %>"
                   class="w-full p-2 border rounded"
                   required>
        </div>
        
        <button type="submit" 
                class="bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700">
            <%= book ? 'Update Book' : 'Add Book' %>
        </button>
    </form>
</div>