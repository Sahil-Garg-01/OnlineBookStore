<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>All Books - BookStore</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .book-card {
            border: 1px solid #ddd;
            border-radius: 8px;
            padding: 20px;
            margin-bottom: 20px;
            background-color: #f9f9f9;
        }
        .book-card img {
            max-width: 100%;
            height: auto;
            border-radius: 8px;
        }
        .book-card h5 {
            font-size: 1.2rem;
            font-weight: bold;
        }
        .book-card p {
            font-size: 1rem;
            color: #555;
        }
        .price {
            font-size: 1.2rem;
            font-weight: bold;
            color: green;
        }
    </style>
</head>
<body>

   

    <!-- Books Section -->
    <section class="container py-5">
        
        <div class="row">
            <!-- Example of a single book card -->
             <% books.forEach(book => { %>
                <div class="col-md-4">
                    <div class="book-card">
                        <img src="<%= book.image %>" >
                        <h5><%= book.title %></h5>
                        <p>by <%= book.author %></p>
                        <p class="text-muted">Category: <%= book.category %></p>
                        <p class="price">â‚¹<%= book.price %></p>
                        <a href="/book/1" style="border: 1px solid #ccc"  class="btn btn-sec btn-block ">Preview</a>

                        <a href="#" class="btn btn-primary w-100 mt-2">Add to Cart</a>
                    </div>
                </div>
             <% }) %>
            

        </div>
    </section>

    <!-- Footer Section -->
    <footer class="bg-dark text-white text-center py-3">
        <p>&copy; 2025 BookStore. All Rights Reserved.</p>
    </footer>

    <!-- Bootstrap JS (Optional for certain components like modals, tooltips) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>
